use("tiendaOnline");

//A
db.productos
.aggregate([
    {
    $project: {
        nombre: 1,
        precio: 1,
        precioCategoria: {
            $cond: {
            if: { $lt: ["$precio", 100] },
            then: "economico",
            else: {
                $cond: {
                if: { $lt: ["$precio", 500] },
                then: "estandar",
                else: "premium",
                },
            },
        },
        },
    },
    },
]).pretty();






